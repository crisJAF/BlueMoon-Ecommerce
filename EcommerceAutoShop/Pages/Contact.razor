@page "/contacto"

<div class="contact-container">

    <section class="contact-header">
        <img src="assets/bluemoon_background_contactozzzyyy.png" alt="BlueMoon Fondo" class="header-image" />
    </section>

    <!-- Información de Contacto -->
    <section class="contact-info">
       <div class="container-main">
            <div class="contact-info-box">
                <h3 class="left-aligned-text_h3">Contacto</h3>
                <p class="left-aligned-text_p">¿Tiene alguna consulta o comentario para nosotros?</p>
                <div class="contact-details">
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>
                        <div class="contact-item-details">
                            <h4>Nuestra Dirección</h4>
                            <p>123 Perfumería BlueMoon, Avenida XYZ, Ciudad ABC</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="bi bi-telephone-fill"></i>
                        </div>
                        <div class="contact-item-details">
                            <h4>Número Celular</h4>
                            <p><a href="tel:+50586377357">+505 8637 7357</a></p>
                            <p><a href="mailto:fraichenicaragua@hotmail.com">fraichenicaragua@hotmail.com</a></p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="bi bi-clock-fill"></i>
                        </div>
                        <div class="contact-item-details">
                            <h4>Horario</h4>
                            <p>Lunes - Viernes: 08:00 am - 05:00 pm</p>
                            <p>Sábado: 08:00 am - 12:00 pm</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mapa -->
            <div class="contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=..."
                        width="600"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy">
                </iframe>
            </div>
       </div>
    </section>

    <!-- Formulario de Contacto -->
    <section class="contact-form">
        <h3>Envíanos un correo</h3>
        <EditForm Model="@formModel" OnValidSubmit="@HandleValidSubmit">
            <div class="form-group">
                <InputText id="name" class="form-control" @bind-Value="formModel.Name" placeholder="Your Name" />
            </div>
            <div class="form-group">
                <InputText id="email" class="form-control" @bind-Value="formModel.Email" placeholder="Email Address" />
            </div>
            <div class="form-group">
                <InputText id="phone" class="form-control" @bind-Value="formModel.PhoneNumber" placeholder="Phone Number" />
            </div>
            <div class="form-group">
                <InputTextArea id="message" class="form-control" @bind-Value="formModel.Message" placeholder="Write message..." />
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </EditForm>
    </section>

    <!-- Botón de WhatsApp flotante -->
    <div class="whatsapp-button">
        <a href="https://wa.me/50586377357" target="_blank">
            <img src="path/to/whatsapp-icon.png" alt="WhatsApp" />
            Necesitas ayuda? Chat con nosotros
        </a>
    </div>
</div>

@code {
    private ContactFormModel formModel = new ContactFormModel();

    private void HandleValidSubmit()
    {
        // Manejar la lógica de envío aquí (puedes enviar el formulario por correo o usar un servicio)
    }

    public class ContactFormModel
    {
        public string Name { get; set; }
        public string Email { get; set; }
        public string PhoneNumber { get; set; }
        public string Message { get; set; }
    }
}
